# =========================
# Bcrypt Configuration
# =========================
BCRYPT_SALT_ROUNDS=10

# =========================
# Server Configuration
# =========================
PORT=3000

# =========================
# Database
# =========================
DATABASE_URL=postgresql://username:password@host:5432/database_name?sslmode=require
DB_SYNCHRONIZE=true
DB_LOGGING=false

# =========================
# JWT Authentication
# =========================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600s

# =========================
# Email Configuration (Gmail)
# =========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_FROM="Your App Name <your_email@gmail.com>"

# =========================
# Redis Cache
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# =========================
# Rate Limiting
# =========================
THROTTLE_TTL=900000
THROTTLE_LIMIT=100

# =========================
# FX API
# =========================
FX_API_URL=https://v6.exchangerate-api.com/v6
FX_API_KEY=your_fx_api_key_here
FX_CACHE_TTL=300
FX_SUPPORTED_CURRENCIES=NGN,USD,EUR,GBP
FX_PRIVATE_KEY=your_fx_private_key_here
